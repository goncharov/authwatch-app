<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="@dimen/smart_watch_2_control_width"
              android:layout_height="@dimen/authwatch_sw2_height"
              android:background="@android:color/black"
              tools:ignore="ContentDescription,PxUsage,UselessParent">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="0dip"
                  android:layout_weight="1"
                  android:layout_height="match_parent">

        <TextView android:id="@+id/smartwatch2_name"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:text="NAME"
                  android:textColor="@android:color/white"
                  android:textSize="@dimen/smart_watch_2_text_size_medium"
                  android:lines="1"
                  android:singleLine="true"
                  android:enabled="false"
                  android:ellipsize="marquee"
                  android:gravity="center_vertical"/>

        <TextView android:id="@+id/smartwatch2_pin"
                  android:layout_height="0dip"
                  android:layout_width="match_parent"
                  android:text="PIN"
                  android:textColor="@android:color/white"
                  android:textSize="@dimen/smart_watch_2_text_size_large"
                  android:textStyle="bold"
                  android:lines="1"
                  android:singleLine="true"
                  android:layout_weight="1"
                  android:gravity="center_vertical"/>

    </LinearLayout>

    <ImageView
            android:id="@+id/smartwatch2_time"
            android:layout_height="@dimen/authwatch_sw2_indicator_height"
            android:layout_width="@dimen/authwatch_sw2_indicator_width" />

</LinearLayout>